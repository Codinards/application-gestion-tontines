{% symfrop  'app_auth_user_delete' %}
<form method="post" action="{{ path('app_auth_user_delete', {'id': user.id, _locale: app.request.locale ?? app.request.defaultLocale}) }}" onsubmit="return confirm(`{{  __u('Are you sure you want to delete this item?') }}`);">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">{{ __u('Delete') }}</button>
</form>
{% endsymfrop %}